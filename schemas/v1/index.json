{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://glasskube.dev/schemas/v1/index.json",
  "$defs": {
    "PackageRepoIndexItem": {
      "properties": {
        "name": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "iconUrl": {
          "type": "string"
        },
        "latestVersion": {
          "type": "string"
        },
        "scope": {
          "$ref": "#/$defs/PackageScope"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ]
    },
    "PackageScope": {
      "enum": [
        "Cluster",
        "Namespaced"
      ]
    }
  },
  "properties": {
    "packages": {
      "items": {
        "$ref": "#/$defs/PackageRepoIndexItem"
      },
      "type": "array"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "packages"
  ]
}
