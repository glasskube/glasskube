{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://glasskube.dev/schemas/v1/package-manifest.json",
  "$defs": {
    "Dependency": {
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ]
    },
    "HelmManifest": {
      "properties": {
        "repositoryUrl": {
          "type": "string"
        },
        "chartName": {
          "type": "string"
        },
        "chartVersion": {
          "type": "string"
        },
        "values": {
          "$ref": "#/$defs/JSON"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "repositoryUrl",
        "chartName",
        "chartVersion"
      ]
    },
    "JSON": {
      "additionalProperties": true,
      "type": "object"
    },
    "KustomizeManifest": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "PackageEntrypoint": {
      "properties": {
        "name": {
          "type": "string"
        },
        "serviceName": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "localPort": {
          "type": "integer"
        },
        "scheme": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "serviceName",
        "port"
      ]
    },
    "PackageReference": {
      "properties": {
        "label": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "label",
        "url"
      ]
    },
    "PackageScope": {
      "enum": [
        "Cluster",
        "Namespaced"
      ]
    },
    "PartialJsonPatch": {
      "properties": {
        "op": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "op",
        "path"
      ]
    },
    "PlainManifest": {
      "properties": {
        "url": {
          "type": "string"
        },
        "defaultNamespace": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "url"
      ]
    },
    "TypedObjectReference": {
      "properties": {
        "apiGroup": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "apiGroup",
        "kind",
        "name"
      ]
    },
    "ValueDefinition": {
      "properties": {
        "type": {
          "$ref": "#/$defs/ValueType"
        },
        "metadata": {
          "$ref": "#/$defs/ValueDefinitionMetadata"
        },
        "defaultValue": {
          "type": "string"
        },
        "options": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "constraints": {
          "$ref": "#/$defs/ValueDefinitionConstraints"
        },
        "targets": {
          "items": {
            "$ref": "#/$defs/ValueDefinitionTarget"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "type",
        "targets"
      ]
    },
    "ValueDefinitionConstraints": {
      "properties": {
        "required": {
          "type": "boolean"
        },
        "min": {
          "type": "integer"
        },
        "max": {
          "type": "integer"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        },
        "pattern": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ValueDefinitionMetadata": {
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "hints": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ValueDefinitionTarget": {
      "oneOf": [
        {
          "required": [
            "resource"
          ],
          "title": "WithResource"
        },
        {
          "required": [
            "chartName"
          ],
          "title": "WithChartName"
        }
      ],
      "properties": {
        "resource": {
          "$ref": "#/$defs/TypedObjectReference"
        },
        "chartName": {
          "type": "string"
        },
        "patch": {
          "$ref": "#/$defs/PartialJsonPatch"
        },
        "valueTemplate": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "patch"
      ]
    },
    "ValueType": {
      "type": "string",
      "enum": [
        "boolean",
        "text",
        "number",
        "options"
      ]
    }
  },
  "properties": {
    "scope": {
      "$ref": "#/$defs/PackageScope"
    },
    "name": {
      "type": "string"
    },
    "shortDescription": {
      "type": "string"
    },
    "longDescription": {
      "type": "string"
    },
    "references": {
      "items": {
        "$ref": "#/$defs/PackageReference"
      },
      "type": "array"
    },
    "iconUrl": {
      "type": "string",
      "format": "uri"
    },
    "helm": {
      "$ref": "#/$defs/HelmManifest"
    },
    "kustomize": {
      "$ref": "#/$defs/KustomizeManifest"
    },
    "manifests": {
      "items": {
        "$ref": "#/$defs/PlainManifest"
      },
      "type": "array"
    },
    "valueDefinitions": {
      "additionalProperties": {
        "$ref": "#/$defs/ValueDefinition"
      },
      "type": "object"
    },
    "defaultNamespace": {
      "type": "string"
    },
    "entrypoints": {
      "items": {
        "$ref": "#/$defs/PackageEntrypoint"
      },
      "type": "array"
    },
    "dependencies": {
      "items": {
        "$ref": "#/$defs/Dependency"
      },
      "type": "array"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "name",
    "defaultNamespace"
  ]
}
